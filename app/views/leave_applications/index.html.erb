<p id="notice"><%= notice %></p>

<h1>Leave Applications</h1>

<table>
  <thead>
    <tr>
      <th>Faculty Name</th>
      <th>Leaving Date</th>
      <th>No of Days</th>
      <th>Reason</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_applications.each do |leave_application| %>
      <tr>
        <td><%= leave_application.faculty.first_name %></td>
        <td><%= leave_application.leaving_date %></td>
        <td><%= leave_application.no_of_days %></td>
        <td><%= leave_application.reason %></td>
        <td>
          <% if leave_application.approved %>
              <%= 'Approved' %>
          <% else %>
              <%= 'Not Approved' %>
          <% end %>
        </td>
        <td><%= link_to 'Show', leave_application %></td>
        <td><%= link_to 'Edit', edit_leave_application_path(leave_application) %></td>
        <td><%= link_to 'Destroy', leave_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

