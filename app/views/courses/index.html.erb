
<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Credits</th>
      <th>LTP</th>
      <th>Course Type</th>
      <th>Academic Degree</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.credits %></td>
        <td><%= course.ltp %></td>
        <td><%= course.course_type %></td>
        <td><%= course.academic_degree.name %></td>
        <td><%= course.department.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>

<%= form_tag :action => 'department_wise'  do %>

    <h3>Search Courses by Department</h3>
    <p>Select Department</p>
    <%= select("course", "department_id", Department.all.collect {|d| [ d.name, d.id ] }) %>
    <%= submit_tag("Submit") %>

<% end %>

<%= form_tag :action => 'degree_wise'  do %>

    <h3>Search Courses by Academic Degree</h3>
    <p>Select Degree</p>
    <%= select("course", "degree_id", AcademicDegree.all.collect {|d| [ d.name, d.id ] }) %>
    <%= submit_tag("Submit") %>

<% end %>