<h3>Achievements</h3>

<div id="achievements">
  <%= render @faculty.achievements %>
</div>

<% if logged_in? and (current_faculty.admin or current_faculty.id == @faculty.id)  %>
  <div>
    <%= form_for([@faculty, @faculty.achievements.new]) do |f| %>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>

        <div class="actions">
          <%= f.submit "Add New Achievement" %>
        </div>
    <% end %>
  </div>
<% end %>

