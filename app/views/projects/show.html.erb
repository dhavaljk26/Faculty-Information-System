<h2>Faculties involved in this Project</h2>

<table>
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Designation</th>
    <th>Email</th>
    <th>Department</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @project.faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.first_name %></td>
        <td><%= faculty.last_name %></td>
        <td><%= faculty.designation %></td>
        <td><%= faculty.email %></td>
        <td><%= faculty.department.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= form_tag :action => 'add_faculty'  do %>

    <h4>Select Faculty to Add</h4>
    <%= select("add", "add_faculty_id", Faculty.all.collect {|f| [ f.first_name+" "+f.last_name, f.id ] }) %>
    <%= submit_tag("Add") %>

<% end %>

<%= form_tag :action => 'del_faculty'  do %>

    <h4>Select Faculty to Remove</h4>
    <%= select("del", "del_faculty_id", @project.faculties.collect {|f| [ f.first_name+" "+f.last_name, f.id ] }) %>
    <%= submit_tag("Remove") %>

<% end %>
<br>

